CREATE TABLE 'users'(
'id' INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
'username' TEXT NOT NULL,
'hash' TEXT NOT NULL,
'isAdmin' BOOL NOT NULL DEFAULT 0,
'firstname' varchar(255),
'surname' varchar(255),
'contact' varchar(22)
);


